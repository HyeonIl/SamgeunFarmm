<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
                android:background="@drawable/black_main"
                android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        >

        <Button
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:id="@+id/Btn_intro"
            android:background="@drawable/btn_intro"
            android:layout_gravity="bottom"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/Btn_weather"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:id="@+id/Btn_talk"
            android:background="@drawable/btn_talk"
            android:layout_gravity="bottom"
            android:layout_below="@+id/space3"
            android:layout_alignParentEnd="true"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:id="@+id/Btn_Fram_now"
            android:background="@drawable/btn_pic"
            android:layout_gravity="bottom"
            android:layout_above="@+id/space2"
            android:layout_toEndOf="@+id/space"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:id="@+id/Btn_weather"
            android:background="@drawable/btn_wea"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/space2"
            android:layout_toStartOf="@+id/space"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_alignBottom="@+id/Btn_talk"
            android:layout_toStartOf="@+id/Btn_talk"
            android:id="@+id/space"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_below="@+id/Btn_intro"
            android:layout_alignStart="@+id/Btn_intro"
            android:id="@+id/space2"/>

        <Space
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_below="@+id/Btn_intro"
            android:layout_toEndOf="@+id/Btn_intro"
            android:id="@+id/space3"/>

    </RelativeLayout>

</LinearLayout>
